
@model List<WeblogModule.Controllers.BlogViewModel>

@{
    ViewBag.Title = "لیست صفحات سایت ";
    Layout = "_Layout_Blog";
} 



<td><a id="create" href="/Editor/Detail?blogId=0">ثبت رکورد جدید</a></td>

<hr />
<table class="table">

    <thead>
        <tr>
            <th>دسته بندی</th>
            <th>عنوان مطلب</th>
            <th>صفحه</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Category?.Name ?? "")</td>
                <td><a href="/Editor/Detail?blogId=@item.Id">@item.Title</a></td>

                <td>
                    @if (item.Type == SignalRMVCChat.Models.weblog.BlogType.AboutUs)
                    {
                        <span>درباره ما</span>
                    }
                    @if (item.Type == SignalRMVCChat.Models.weblog.BlogType.Rules)
                    {
                        <span>قوانین</span>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts
{
    
}
